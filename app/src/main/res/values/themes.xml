<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.YEP" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#8BABAE</item>
        <item name="colorPrimaryVariant">#0F315E</item>
        <item name="colorOnPrimary">#EFEFE7</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FAFFFF</item>
        <item name="colorSecondaryVariant">#8489B0</item>
        <item name="colorOnSecondary">#80C8D0</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.YEP.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/zktchang</item>
        <item name="android:screenOrientation">portrait</item>
        <item name="android:configChanges">orientation|screenSize</item>
    </style>

    <style name="Theme.YEP.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.YEP.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>